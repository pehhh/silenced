<%- include('./layout/header') %>
<%- include('./partials/nav') %>   
    <h1>Perfil</h1>
    <hr class="subrayado">
    <div class="log flexyRow-evenly">
        
        <button class="boton"><a href="/editarPerfil/<%= usuario %>">Editar perfil</a></button>
        <button class="boton"><a href="/editarPassword/<%= usuario %>">Editar contraseña</a></button>
    </div>
    <div class="log flexyCol-center">
        <h1>Introducir opinion</h1>
        <hr class="subrayado">
        <form action="/insertar" method="post" >
        
            <p>
                <label for="titulo">Titulo</label> <br>
                <input type="text" name="titulo" required class="campo">
            </p>
            <p>
                <label for="opinion">Opinion borrada</label> <br>
                <textarea name="opinion"  cols="30" rows="10" minlength="4" maxlength="300" required class="campo"></textarea>
                
            </p>
            <p>
                <label for="plataforma">Plataforma</label> <br>
                <select id="country" name="plataforma" required class="campo">  <br>
                    <option value="amazon">Amazon</option>
                    <option value="tripadvisor">Tripadvisor</option>
                    <option value="google">Google</option>
                    <option value="aliexpress">Aliexpress</option>
                    <option value="trivago">Trivago</option>
                    <option value="booking">Booking</option>
                </select>
            </p>
            <p>
                <label for="valoracionNegativa">valoracionNegativa</label> <br>
                <input type="text" name="valoracionNegativa" required class="campo">
            </p>
            <p>
                <input type="submit" class="boton">
            </p>
          
        </form>
    </div>
    
    
    <h1>Opiniones introducidas</h1>
    <hr class="subrayado">
    <section class="flexyRow-evenly">
        <% if(data.length > 0) { %>
            <% for ( let i= 0; i < data.length; i++) { %>
                <div class="opinion">
                    <h3> <%= data[i].titulo %> </h3>
                    <h4> <%= data[i].plataforma %> </h4>
                    <h4> <%= data[i].valoracionNegativa %> </h4>
                    <div class="tamañoOpinion">
                        <%= data[i].opinion %>
                    </div>
                    <h5> <%= data[i].CREATED_AT %></h5>
                    <div class="flexyRow-evenly">
                        <button class="botonPeq"><a href="/editar/<%= data[i].id_opinion %>">Editar</a></button>
                        <button class="botonPeq"><a href="/borrar/<%= data[i].id_opinion %>">Borrar</a></button>
                    </div>
                    
                </div>
                
            <% } %>
        <% }else{ %>
            <h3>No tienes opiniones, escribe la primera</h3>
        <% } %>
    </section>

<%- include('./layout/footer') %>